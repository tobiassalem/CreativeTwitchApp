<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameListItem"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <WebView
        android:id="@+id/streamLogoWeb"
        android:layout_width="@dimen/width_webview_preview_image"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_horizontal_inside"
        android:clickable="false"
        android:focusable="false"
        />

    <!-- ImageView
        android:id="@+id/streamLogo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_horizontal_inside"
        android:src="@android:drawable/ic_dialog_info" / -->

    <TextView
        android:id="@+id/streamViewerCount"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/streamLogoWeb"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="12sp"
        tools:text="Viewers: 1337"
         />

    <TextView
        android:id="@+id/streamTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/streamViewerCount"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/streamLogoWeb"
        android:gravity="center_vertical"
        android:textSize="16sp"
        tools:text="League of Legends alpha stream"
        />

</RelativeLayout>

